tf-transform
  z-index 1000

  & > .background
    display none
    z-index 1000
    width 100%
    height 100%
    background rgba(0,0,0,.5)
    top 0
    left 0
    position absolute

  & > .transform
    display none
    position absolute
    top 50%
    left 50%
    margin-top -225px
    margin-left -325px
    width 630px
    height 430px
    background #fff
    border 1px solid #e9ebed
    padding 10px
    z-index 1000
    box-shadow 0 0 3px 1px rgba(0,0,0,.5)

  .active
    display block

  .option
    width 75px
    height 50px
    background-color #87C5FB
    display flex
    justify-content center
    align-items center
